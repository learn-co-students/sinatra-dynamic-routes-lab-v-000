<% operation = params[:operation] %>
<% num_1 = params[:number1].to_i %>
<% num_2 = params[:number2].to_i %>

<% case operation
    when "add"
      answer = num_1 + num_2
    when "subtract"
      answer = num_1 - num_2
    when "multiply"
      answer = num_1 * num_2
    when "divide"
      answer = num_1 / num_2
    end
%>

<%= answer.to_s %>