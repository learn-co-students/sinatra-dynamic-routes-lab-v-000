<%if @operation == "multiply" %>
  <%= (@number1.to_i * @number2.to_i).to_s %>

<%elsif @operation == "add" %>
  <%= (@number1.to_i + @number2.to_i).to_s %>

<%elsif @operation == "subtract" %>
  <%= (@number1.to_i - @number2.to_i).to_s %>

<%elsif @operation == "divide" %>
  <%= (@number1.to_i / @number2.to_i).to_s %>

<% end %>
